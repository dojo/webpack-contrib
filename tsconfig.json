{
	"compilerOptions": {
		"declaration": false,
		"experimentalDecorators": true,
		"module": "umd",
		"moduleResolution": "node",
		"outDir": "_build/",
		"removeComments": false,
		"sourceMap": true,
		"strict": true,
		"target": "es6",
		"types": [ "intern" ]
	},
	"include": [
		"./src/**/*.ts",
		"./tests/**/*.ts"
	],
	"exclude": [
		"_build",
		"dist",
		"node_modules"
	]
}
