{
	"version": "2.2.0",
	"compilerOptions": {
		"declaration": false,
		"module": "commonjs",
		"noUnusedLocals": true,
		"outDir": "_build/",
		"removeComments": false,
		"sourceMap": true,
		"strict": true,
		"target": "es6",
		"moduleResolution": "node",
		"types": [ "intern" ],
		"lib": [
			"dom",
			"es5",
			"es2015.core",
			"es2015.promise",
			"es2015.collection",
			"es2015.iterable",
			"es2015.promise",
			"es2015.symbol",
			"es2015.symbol.wellknown"
		]
	},
	"include": [
		"./src/**/*.ts",
		"./tests/**/*.ts"
	]
}

