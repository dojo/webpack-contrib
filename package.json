{
  "name": "@dojo/webpack-contrib",
  "version": "0.1.7-pre",
  "description": "Webpack loaders and plugins used by the Dojo 2 build process",
  "engines": {
    "npm": ">=3.0.0"
  },
  "private": true,
  "homepage": "http://dojo.io",
  "bugs": {
    "url": "https://github.com/dojo/webpack-contrib/issues"
  },
  "license": "(BSD-3-Clause OR Apache-2.0)",
  "main": "main.js",
  "files": [
    "dist",
    "src",
    "typings.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dojo/webpack-contrib.git"
  },
  "scripts": {
    "prepublish": "grunt peerDepInstall",
    "precommit": "lint-staged",
    "prettier": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "test": "grunt test"
  },
  "dependencies": {
    "@dojo/shim": "~0.2.3",
    "copy-webpack-plugin": "4.0.1",
    "html-webpack-include-assets-plugin": "^1.0.2",
    "loader-utils": "^1.1.0",
    "recast": "^0.12.7",
    "ts-loader": "3.1.1",
    "typed-css-modules": "0.3.1"
  },
  "devDependencies": {
    "@dojo/loader": "~0.1.1",
    "@types/estree": "^0.0.37",
    "@types/glob": "~5.0.30",
    "@types/grunt": "~0.4.21",
    "@types/mockery": "^1.4.29",
    "@types/sinon": "^2.3.3",
    "@types/source-map": "0.5.*",
    "@types/webpack": "^3.8.1",
    "codecov.io": "0.1.6",
    "grunt": "~1.0.1",
    "grunt-dojo2": "latest",
    "grunt-tslint": "5.0.1",
    "husky": "0.14.3",
    "intern": "~4.1.0",
    "lint-staged": "6.0.0",
    "mockery": "^2.1.0",
    "prettier": "1.9.2",
    "sinon": "^2.3.0",
    "tslint": "5.8.0",
    "tslint-plugin-prettier": "1.3.0",
    "typescript": "~2.6.1",
    "webpack": "^3.5.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": true,
    "parser": "typescript",
    "printWidth": 120,
    "arrowParens": "always"
  }
}
